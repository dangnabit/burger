{{!-- View setup Setup the index.handlebars to have the template that Handlebars can render onto. Create a button in index.handlebars that will submit the user input into the database. --}}
<div class="row">
  <div class="col-md-6 text-center">
    <ul>
      {{#each burgers}} {{#unless this.devoured}}
      <li>
        <h3>{{this.burger_name}}</h3>
        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button class='btn btn-primary' type="submit">Devour this bad boy!</button>
        </form>
      </li>
      {{/unless}} {{/each}}
    </ul>
  </div>
  <div class="col-md-6 text-center">
    <h2>Devoured Burgers!</h2>
    <ul>
      {{#each burgers}} {{#if this.devoured}}
      <li>
        <h3>{{this.burger_name}}</h3>
      </li>
      {{/if}} {{/each}}
    </ul>
  </div>
</div>
